{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "ES2015",
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/react",
      "./types"
    ],
    "paths": {
      "firebase/*": [
        "./node_modules/firebase/*"
      ],
      "react": [
        "./node_modules/react"
      ],
      "react-native": [
        "./node_modules/react-native"
      ]
    },
    "types": [
      "react",
      "react-native",
      
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
